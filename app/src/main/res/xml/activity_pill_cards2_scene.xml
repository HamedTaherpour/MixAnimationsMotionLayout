<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:onTouchUp="autoComplete"
            motion:touchRegionId="@id/pillCard1"/>
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="60"
                motion:keyPositionType="parentRelative"
                motion:motionTarget="@+id/pillCard1"
                motion:percentX=".50"
                motion:percentY="0.1" />
            <KeyAttribute
                motion:motionTarget="@+id/pillCard1"
                motion:framePosition="60"
                android:rotation="135" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/pillCard1"
            android:layout_width="300dp"
            android:layout_height="176dp"
            android:rotation="0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.9">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="6dp" />
        </Constraint>
        <Constraint
            android:id="@+id/pillCard2"
            android:layout_width="300dp"
            android:layout_height="176dp"
            android:rotation="-20"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.9">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="4dp" />
        </Constraint>
        <Constraint
            android:id="@+id/pillCard3"
            android:layout_width="300dp"
            android:layout_height="176dp"
            android:rotation="20"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.9">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="2dp" />
        </Constraint>
        <Constraint
            android:id="@+id/pillCard4"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="300dp"
            android:layout_height="176dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            android:rotation="20"
            motion:layout_constraintVertical_bias="0.9">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="2dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/pillCard1"
            android:layout_width="300dp"
            android:layout_height="176dp"
            android:rotation="20"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.9">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="1dp" />
        </Constraint>
        <Constraint
            android:id="@+id/pillCard2"
            android:layout_width="300dp"
            android:layout_height="176dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.9">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="6dp" />
        </Constraint>
        <Constraint
            android:id="@+id/pillCard3"
            android:layout_width="300dp"
            android:layout_height="176dp"
            android:rotation="-20"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.9">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="4dp" />
        </Constraint>
        <Constraint
            android:id="@+id/pillCard4"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="300dp"
            android:layout_height="176dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1"
            android:rotation="20"
            motion:layout_constraintVertical_bias="0.9">
            <CustomAttribute
                motion:attributeName="cardElevation"
                motion:customDimension="2dp" />
        </Constraint>
    </ConstraintSet>
</MotionScene>