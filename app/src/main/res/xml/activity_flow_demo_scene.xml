<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/collapse"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:onTouchUp="autoComplete"
            motion:touchRegionId="@id/cardFlow1" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/flow">
            <Layout
                android:layout_width="200dp"
                android:layout_height="128dp"
                android:orientation="horizontal"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"/>
            <CustomAttribute
                motion:attributeName="maxElementsWrap"
                motion:customIntegerValue="3" />
        </Constraint>

        <Constraint
            android:id="@+id/cardFlow1"
            android:layout_width="56dp"
            android:layout_height="56dp" />
        <Constraint
            android:id="@+id/cardFlow2"
            android:layout_width="56dp"
            android:layout_height="56dp" />
        <Constraint
            android:id="@+id/cardFlow3"
            android:layout_width="56dp"
            android:layout_height="56dp" />
        <Constraint
            android:id="@+id/cardFlow4"
            android:layout_width="56dp"
            android:layout_height="56dp"  />
        <Constraint
            android:id="@+id/cardFlow5"
            android:layout_width="56dp"
            android:layout_height="56dp"  />
        <Constraint
            android:id="@+id/cardFlow6"
            android:layout_width="56dp"
            android:layout_height="56dp"  />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapse">
        <Constraint
            android:id="@+id/cardFlow1"
            android:layout_width="210dp"
            android:layout_height="190dp" />
        <Constraint
            android:id="@+id/cardFlow2"
            android:layout_width="130dp"
            android:layout_height="180dp" />
        <Constraint
            android:id="@+id/cardFlow3"
            android:layout_width="170dp"
            android:layout_height="240dp" />
        <Constraint
            android:id="@+id/cardFlow4"
            android:layout_width="140dp"
            android:layout_height="140dp" />
        <Constraint
            android:id="@+id/cardFlow5"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <Constraint
            android:id="@+id/cardFlow6"
            android:layout_width="150dp"
            android:layout_height="190dp" />
        <Constraint
            android:id="@+id/flow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="maxElementsWrap"
                motion:customIntegerValue="3" />
        </Constraint>
    </ConstraintSet>
</MotionScene>